body {
    font-family: Arial, sans-serif;
    background-color: #204969;
    color: white;
    margin: 0;
    padding: 0;
}

#file-list, #file-content {
    text-align: center;
}

#buttons-container {
    margin: 20px;
}

button {
    border: 2px solid black;
    padding: 10px;
    border-radius: 20px;
    margin: 5px;
    cursor: pointer;
}

#file-list button {
    background-color: lightblue;
}

#file-content button {
    background-color: turquoise;
}

#file-content #back-button {
    background-color: black;
    color: white;
}

#text-content {
    background-color: #e0e0e0;
    border-radius: 10px;
    padding: 10px;
    margin: 10px;
    height: 300px;
    overflow-y: auto;
}

#page-info {
    display: block;
    margin: 10px;
}